<resources>
    <style name="Theme.RescueMe" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/sans_serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="HeaderText">
        <item name="android:fontFamily">@font/sans_serif_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/primary_red</item>
    </style>

    <style name="BodyText">
        <item name="android:fontFamily">@font/sans_serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@color/primary_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sans_serif_bold</item>
    </style>
</resources>